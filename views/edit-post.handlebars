<article>
    <h5>
        <a href="/dashboard" class="text-info">Back to Dashboard</a>
    </h5>
    <form id="edit-form" class="edit-post-form">
        <h4>Edit Post</h4>
        <div>
            <div>
                <label for="titleInput">Title:</label>
                <input type="text" name="titleInput" value="{{post.title}}">
            </div>
            <div>
                <label for="contentInput">Blog Content:</label>
                <textarea name="contentInput">{{post.content}}</textarea>
            </div>
            <button type="submit" class="btn btn-dark">Save Post</button>
            <button type="button" id="deleteBtn" class="btn btn-secondary">Delete Post</button>
        </div>
    </form>
</article>

{{> comments post.comments}}

<script src="/javascript/edit-post.js"></script>
<script src="/javascript/delete-post.js"></script>