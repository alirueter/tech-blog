<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
        <div class="title">
            {{post.title}}
        </div>
        <div class="meta">
            {{post.content}}
            |
            <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>
        </article>
    </li>
    {{/each}}
</ol>